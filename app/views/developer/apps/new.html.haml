.page-header
  %h2 Новое приложение

= simple_form_for @app, :url => developer_apps_path, :html => { :class => 'form-vertical', :method=>:post } do |f|
  = f.error_notification
  = f.input :name
  = f.input :icon, :as => :file
  = f.input :desc
  .actions
    = f.button :submit, :class => 'btn btn-primary'

