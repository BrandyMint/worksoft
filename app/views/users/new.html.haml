.row
  .login-block.span4.offset4
    %h1.login-block-title Регистрация

    = simple_form_for @user, :html => { class: 'login-block-form' } do |f|
      = f.error_notification
      = f.input :email, :label => false, :placeholder => 'email'
      = f.input :password, :label => false, :placeholder => 'пароль'
      = f.input :password_confirmation, :label => false, :placeholder => 'подтверждение пароль'
      .actions
        = f.button :submit, :class => 'btn btn-primary', :value => t('simple_form.buttons.registration')
