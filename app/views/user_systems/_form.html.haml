.well
  .row
    = simple_form_for @user_system, :html => {:class => 'form-inline'} do |f|
      .span3
        = f.input :kernel_version,  :wrapper => :stack, :placeholder => "не важно", :input_html => { :class => 'input-small' }
        = f.input :configuration_id, :wrapper => :stack, :collection => configurations_collection_for_search, :include_blank => false
        = f.input :configuration_version, :wrapper => :stack, :placeholder => 'версия конфигурации', :input_html => { :class => 'input-small' }
      .actions
        = f.button :submit, :class => 'btn primary'
